    </div>

    <h1 class=" text-center">Upload images dynamically</h1>
    <br>
    <hr>
    <div>
        <br>
        <form class="form-class" action="/uploadImages" method="POST" enctype="multipart/form-data">
            <label for="target">Choose a type:</label>
            <select id="target" name="category">

                <option value="" selected hidden disabled>Select...</option>
                <option value="False Color Composition">False Color Composition</option>
                <option value="NDVI">NDVI</option>
                <option value="Locust Breeding Points">Locust Breeding Points</option>
                <option value="Root Soil Moisture">Root Soil Moisture</option>
                <option value="Wind Vector">Wind Vector</option>
                <option value="Accumulated Rainfall">Accumulated Rainfall</option>
                <option value="Locust Infestation">Locust Infestation</option>
                <option value="Land Surface Temperature">Land Surface Temperature</option>
                <option value="Surface Soil Moisture">Surface Soil Moisture</option>
                <option value="Leaf Index">Leaf Index</option>
            </select>
            <div>
                <label for="name">Image Date</label>
                <input type="text" id="name" placeholder="Name" value="" name="name" required>
            </div>
            <div>
                <label for="image">Upload Image</label>
                <input type="file" id="image" name="image" value="" required>
            </div>
            <div>
                <button class="btn-success" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <br>

    <hr>

</body>

</html>